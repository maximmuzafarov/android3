<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber2"
            android:hint="Ширина"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="144dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber" app:layout_constraintHorizontal_bias="0.0"
            android:minHeight="48dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumber3"/>
    <EditText
            android:layout_width="211dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber"
            android:hint="Длина"
            android:layout_marginEnd="144dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="38dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextNumber2"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="100dp" android:minHeight="48dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:text="Результат"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textViewResult"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="164dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="582dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.377"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber3"/>
    <Button
            android:text="SurfaceArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="38dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="260dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="80dp" app:layout_constraintTop_toBottomOf="@+id/editTextNumber3"
            app:layout_constraintVertical_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editTextNumber3"
            android:hint="Высота"
            app:layout_constraintTop_toBottomOf="@+id/editTextNumber2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="39dp" android:layout_marginBottom="27dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewResult" android:layout_marginEnd="143dp"
            app:layout_constraintEnd_toEndOf="parent" android:minHeight="48dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Volume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="257dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.029"/>
    <Button
            android:text="task2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/buttonTask2"
            app:layout_constraintTop_toBottomOf="@+id/button" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="40dp" android:layout_marginEnd="257dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.205"/>
</androidx.constraintlayout.widget.ConstraintLayout>